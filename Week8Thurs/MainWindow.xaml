<Window x:Class="Week8Thurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week8Thurs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1370D8"/>
                <GradientStop Color="#FFFFF3C9" Offset="1"/>
                <GradientStop Color="#FF8DD0AD" Offset="0.737"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Beach Btn" HorizontalAlignment="Left" Margin="636,352,0,0" VerticalAlignment="Top" Height="46" Width="125" Background="#FFF9EEA5" IsCancel="True" FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Enter Something Cool" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22" Foreground="#FFEFB208"/>
        <TextBlock HorizontalAlignment="Left" Margin="94,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="133" Background="#FFF5FBD9" FontFamily="Comic Sans MS" TextAlignment="Center"><Run Language="en-au" Text=" "/><Run Text="Placeholder"/></TextBlock>
        <ComboBox HorizontalAlignment="Left" Margin="94,76,0,0" VerticalAlignment="Top" Width="133">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFF5FF9A" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <WrapPanel Margin="324,19,24,176" Background="#FFFBFFDA">
            <Button Content="Button"/>
            <RadioButton Content="RadioButton"/>
            <RadioButton Content="RadioButton"/>
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"/>
            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>

        </WrapPanel>

    </Grid>
</Window>
